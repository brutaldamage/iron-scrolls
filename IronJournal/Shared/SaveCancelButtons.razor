<div class="form-group">
    <div class="col-md-6 col-md-offset-3">

        @if (IsSaving)
        {
            <button class="btn btn-default float-right save disabled" disabled>
                <span class='fa-left fas fa-sync-alt spinning'>
                </span>Saving...
            </button>
        }
        else
        {
            <input type="submit" class="btn btn-default" value="Save" />
        }

        <NavLink class="btn btn-primary" href="@CancelRedirect" Match="NavLinkMatch.All">
            Cancel
        </NavLink>
    </div>
</div>

@code {
    [Parameter]
    public string CancelRedirect { get; set; }

    [Parameter]
    public bool IsSaving { get; set; }
}
